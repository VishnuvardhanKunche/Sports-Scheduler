<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-futbol me-2"></i>
        All Sports
    </h1>
    <% if (user && user.role === 'admin') { %>
        <a href="/admin/sports/new" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>
            Create New Sport
        </a>
    <% } %>
</div>

<% if (sports.length > 0) { %>
    <div class="row">
        <% sports.forEach(sport => { %>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-medal me-2 text-primary"></i>
                            <%= sport.name %>
                        </h5>
                        
                        <div class="row text-center mb-3">
                            <div class="col-4">
                                <div class="h5 text-primary mb-1"><%= sport.sessions.length %></div>
                                <small class="text-muted">Total Sessions</small>
                            </div>
                            <div class="col-4">
                                <div class="h5 text-success mb-1">
                                    <%= sport.sessions.filter(s => s.status === 'active').length %>
                                </div>
                                <small class="text-muted">Active</small>
                            </div>
                            <div class="col-4">
                                <div class="h5 text-info mb-1">
                                    <%= sport.sessions.reduce((total, s) => total + (s.players ? s.players.length : 0), 0) %>
                                </div>
                                <small class="text-muted">Total Players</small>
                            </div>
                        </div>

                        <% if (sport.sessions.length > 0) { %>
                            <div class="mb-3">
                                <h6 class="text-muted mb-2">Recent Sessions:</h6>
                                <% sport.sessions.filter(s => s.status === 'active').slice(0, 3).forEach(session => { %>
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <small>
                                            <%= new Date(session.date).toLocaleDateString() %> at <%= session.time %>
                                        </small>
                                        <small class="text-muted">
                                            <%= session.players ? session.players.length : 0 %>/<%= session.playersNeeded %>
                                        </small>
                                    </div>
                                <% }); %>
                                
                                <% if (sport.sessions.filter(s => s.status === 'active').length > 3) { %>
                                    <small class="text-muted">
                                        ... and <%= sport.sessions.filter(s => s.status === 'active').length - 3 %> more active sessions
                                    </small>
                                <% } %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-3 text-muted">
                                <i class="fas fa-calendar-plus fa-2x mb-2"></i>
                                <p class="mb-0">No sessions yet</p>
                                <small>Be the first to create one!</small>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="card-footer">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a href="/sports/<%= sport.id %>" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i>
                                View Sport
                            </a>
                            <% if (user) { %>
                                <a href="/sessions/new?sport=<%= sport.id %>" class="btn btn-success btn-sm">
                                    <i class="fas fa-plus me-1"></i>
                                    Create Session
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <div class="text-center py-5">
        <i class="fas fa-futbol fa-4x text-muted mb-4"></i>
        <h3>No Sports Available</h3>
        <p class="text-muted mb-4">
            No sports have been created yet. 
            <% if (user && user.role === 'admin') { %>
                Create the first sport to get started!
            <% } else { %>
                Contact an admin to create sports.
            <% } %>
        </p>
        <% if (user && user.role === 'admin') { %>
            <a href="/admin/sports/new" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>
                Create First Sport
            </a>
        <% } else { %>
            <a href="/" class="btn btn-outline-primary">
                <i class="fas fa-home me-2"></i>
                Back to Home
            </a>
        <% } %>
    </div>
<% } %>

<%- include('../partials/footer') %>